
/* 页面整体样式 */
.index-page.data-v-1cf27b2a {
  width: 100%;
  min-height: 100vh;
  background-color: #f5f5f5;
  box-sizing: border-box;
  padding-bottom: 100rpx; /* 给底部导航栏留空间 */
}

/* banner轮播图样式 */
.banner-swiper.data-v-1cf27b2a {
  width: 100%;
  height: 300rpx;
}
.banner-img.data-v-1cf27b2a {
  width: 100%;
  height: 100%;
}

/* 胶囊功能板块样式 */
.capsule-section.data-v-1cf27b2a {
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 30rpx 0;
  background-color: #fff;
  margin: 20rpx 0;
}
.capsule-item.data-v-1cf27b2a {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.capsule-icon.data-v-1cf27b2a {
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 10rpx;
}
.capsule-text.data-v-1cf27b2a {
  font-size: 28rpx;
  color: #333;
}

/* 推文列表样式 */
.tweet-section.data-v-1cf27b2a {
  width: 100%;
  padding: 0 20rpx;
  box-sizing: border-box;
}
.tweet-item.data-v-1cf27b2a {
  display: flex;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}
.tweet-cover.data-v-1cf27b2a {
  width: 150rpx;
  height: 150rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}
.tweet-content.data-v-1cf27b2a {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.tweet-title.data-v-1cf27b2a {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}
.tweet-desc.data-v-1cf27b2a {
  font-size: 26rpx;
  color: #666;
  line-height: 1.4;
  margin-bottom: 10rpx;
}
.tweet-time.data-v-1cf27b2a {
  font-size: 24rpx;
  color: #999;
}
